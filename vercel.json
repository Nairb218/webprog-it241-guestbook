{
  "version": 2,
  "buildCommand": "cd server && npm install && npm run build && cd ../client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.js": {
      "includeFiles": [
        "server/dist/**",
        "server/node_modules/**"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
